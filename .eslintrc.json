{
  "plugins": ["@typescript-eslint", "prettier", "react-hooks"],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "warn",
    "no-console": "warn",
    "prettier/prettier": [
      "error",
      // fixes lint complaining about CRLF line endings on windows
      {
        "endOfLine": "auto"
      }
    ]
  }
}
